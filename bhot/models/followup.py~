from bhot.models import db

class Donor(db.Model):
    __tablename__ = 'donors'

    donor_id = db.Column(db.Integer, primary_key=True)

    # Add fields related to Donor
    age = db.Column(db.Integer)
    gender = db.Column(db.Enum('male','female', name="donor_gender")) # tehnically this should be "sex"...
    dtype = db.Column(db.Enum('living','DBD','DCD', name="donor_type"))
    cause_of_death = db.Column(db.String)

    history_of_hypertension = db.Column(db.Boolean)
    hbv_hbs_ag = db.Column(db.Boolean)
    hbv_hbs_as = db.Column(db.Boolean)
    hbv_hbs_ac = db.Column(db.Boolean)

    egfr = db.Column(db.Integer)
    proteinuria = db.Column(db.Float)
    proteinuria_dipstick = db.Column(db.Enum('Absent','Trace','+','++','+++','++++', name="donor_prot_dipstick"))
    cold_ischemia_time = db.Column(db.Integer)
    delayed_graft_function = db.Column(db.Boolean)
    total_hla_mismatches = db.Column(db.Integer)
    induction_therapy = db.Column(db.String)
    preformed_dsa = db.Column(db.Boolean)
    class_immunodominant_dsa = db.Column(db.Enum('I','II', name="donor_immuno_dsa"))
    specificity_immunodominant_dsa = db.Column(db.String)
    mfi_immunodominant_dsa = db.Column(db.String)
