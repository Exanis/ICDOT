{% macro render_bootstrap_table(query) %}
<table class="table table-sm table-stripped">
    {% if lecipients | length == 0 %}
    <tr><td>No Data</td></tr>
    {% else %}
    <thead>
        <tr>
            <th>
                {# Edit Link #}
            </th>
            {% set fields = query[0].__table__.columns._data.keys() %}
            {% set id_field = fields[0] %}
            {% set fields = fields[1:] %}
            {% for key in fields %}
            <th>
                {{ key }}
            </th>
            {% endfor %}
        </tr>
    </thead>
    <tbody>
        {% for r in query %}
        <tr>
            <td>
                {% if id_field == "recipient_id" %}
                <a href="{{url_for("recipient_edit", id=r[id_field])}}">edit</a>
                {% endif %}
            </td>
            {% for key in fields %}
            <td>{{r[key]}}</td>
            {% endfor %}
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endmacro %}
